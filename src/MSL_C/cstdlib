#ifndef CSTDLIB_H
#define CSTDLIB_H

#include "size_t.h"
#include "wchar_t.h"

#ifdef __cplusplus
extern "C" {
#endif

void free(void *);

int abs(int);

void abort(void);

int atoi(const char *);

size_t mbstowcs(wchar_t *, const char *, size_t);
size_t wcstombs(char *, const wchar_t *, size_t);

void qsort(
	void *table_base, size_t num_members, size_t member_size,
	int (*compare_members)(const void *, const void *));

int rand();
void srand(unsigned int seed);
#ifdef __cplusplus
}
#endif

#endif // CSTDLIB_H
